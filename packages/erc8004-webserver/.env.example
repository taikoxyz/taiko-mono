# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
AGENT_DOMAIN=agent.example.com
ENVIRONMENT=production

# Database Configuration
DATABASE_URL=postgresql+asyncpg://user:pass@postgres:5432/agent_db
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=40

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_POOL_SIZE=10

# Blockchain Configuration
WEB3_PROVIDER=https://rpc.taiko.xyz
CHAIN_ID=167000
CONTRACT_ADDRESS=0x

# Security
SECRET_KEY=generate-secure-key-for-production
CORS_ORIGINS=https://app.example.com,https://api.example.com
RATE_LIMIT_ENABLED=true

# Storage
DATA_PATH=/data/agent_data
IPFS_GATEWAY=https://ipfs.io/ipfs/
MAX_UPLOAD_SIZE=10485760

# Monitoring
METRICS_ENABLED=true
LOG_LEVEL=INFO

# Cache TTL (in seconds)
AGENT_CARD_CACHE_TTL=300
FEEDBACK_LIST_CACHE_TTL=60
REPUTATION_CACHE_TTL=30

# Rate Limiting
RATE_LIMIT_PUBLIC=100/minute
RATE_LIMIT_AUTHENTICATED=1000/minute

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100