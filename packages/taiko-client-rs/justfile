toolchain := "nightly-2025-09-27"

fmt:
  rustup toolchain install {{toolchain}} && \
  cargo +{{toolchain}} fmt

fmt-check:
  rustup toolchain install {{toolchain}} && \
  cargo +{{toolchain}} fmt --check

clippy:
  cargo clippy --workspace --all-features --no-deps --exclude bindings -- -D warnings

test:
  ./tests/entrypoint.sh

gen_bindings:
  ./script/gen_bindings.sh
