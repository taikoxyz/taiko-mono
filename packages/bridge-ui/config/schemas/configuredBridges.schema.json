{
  "$id": "configuredBridges.json",
  "type": "object",
  "properties": {
    "configuredBridges": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "source": {
            "type": "string"
          },
          "destination": {
            "type": "string"
          },
          "addresses": {
            "type": "object",
            "properties": {
              "bridgeAddress": {
                "type": "string"
              },
              "erc20VaultAddress": {
                "type": "string"
              },
              "erc721VaultAddress": {
                "type": "string"
              },
              "erc1155VaultAddress": {
                "type": "string"
              },
              "signalServiceAddress": {
                "type": "string"
              },
              "anchorForkRouter": {
                "type": "string",
                "description": "Shasta protocol: Anchor fork router address for checkpoint sync (L2 only)"
              },
              "crossChainSyncAddress": {
                "type": "string",
                "description": "Pacaya protocol: Cross-chain sync address (deprecated, for backward compatibility)"
              },
              "hops": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "chainId": { "type": "number" },
                    "signalServiceAddress": { "type": "string" }
                  },
                  "required": ["chainId", "signalServiceAddress"]
                },
                "description": "Pacaya protocol: Multi-hop configuration for bridge proofs"
              }
            },
            "required": [
              "bridgeAddress",
              "erc20VaultAddress",
              "erc721VaultAddress",
              "erc1155VaultAddress",
              "signalServiceAddress"
            ],
            "additionalProperties": false
          }
        },
        "required": ["source", "destination", "addresses"],
        "additionalProperties": false
      }
    }
  },
  "required": ["configuredBridges"],
  "additionalProperties": false
}
